<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WidgetTextStyle">
        <item name="android:textColor">@color/background_material_dark</item>
    </style>

    <style name="FilterStyle">
        <item name="android:background">@drawable/filteritem</item>
        <item name="android:padding">@dimen/filter_padding</item>
        <item name="android:layout_margin">@dimen/filter_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    <style name="FilterImageViewStyle">
        <item name="android:background">@drawable/filteritem</item>
        <item name="android:layout_margin">@dimen/filter_margin</item>
        <item name="android:padding">@dimen/filter_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
