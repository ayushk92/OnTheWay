<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/darker_gray"
    tools:context="com.example.mynanodegreeapps.ontheway.CostForTwoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/homeFilter"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/filter_icon"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/underfivehundred"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:src="@drawable/rupee"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/underfivehundred"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/underthousand"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:src="@drawable/rupee"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/underthousand"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/underfifteenhundred"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:src="@drawable/rupee"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/underfifteenhundred"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/abovetwothousand"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:src="@drawable/rupee"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/undertwothousand"
            />
    </LinearLayout>


</LinearLayout>
